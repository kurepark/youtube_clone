mixin video(video)
     div.video_card
        a(href=`/videos/${video.id}`).video_link
            div.video_image_box 
                img(src=`${video.thumbUrl}`)
            h4  
                a(href=`/videos/${video.id}`)=video.title
            p=video.description 
            div 
                span #{video.owner.name} / 
                span #{video.meta.views} íšŒ
            ul
                each hashtag in video.hashtags 
                    li=hashtag
