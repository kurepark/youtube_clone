extends ../base.pug 

block content 
    if(errorMessage) 
        span=errorMessage
    form(method="POST" enctype="multipart/form-data")
        label(for="video") video file 
        input(type="file" accept="video/*" requred, id="video" name="video")
        label(for="thumb") thumbnamil 
        input(type="file" accept="image/*" requred, id="thumb" name="thumb")
        input(type="text" placeholder="title" required name="title" maxlength="20")
        input(type="text" placeholder="description" required name="description" minlength="5")
        input(type="text" placeholder="hashtags, separated by comma" required name="hashtags")
        button(type="submit") upload video
    
    div 
        video#preview
        button#actionBtn start recording!

block scripts 
    script(src="/static/js/recorder.js")