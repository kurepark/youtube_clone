extends ../base.pug 

block content 
    img(src=`${loggedInUser.avatarUrl}` width="100", height="100")
    form(method="POST" enctype="multipart/form-data")
        label(for="avatar") avatar
        input(type="file" id="avatar" name="avatar" accept="image/*")
        input(type="text" requred name="name" placeholder="write your name" value=loggedInUser.name)
        input(type="email" requred name="email" placeholder="write your email" value=loggedInUser.email ) 
        input(type="text" requred name="username" placeholder="write your username" value=loggedInUser.username )
        input(type="text" name="location" placeholder="write your location" value=loggedInUser.location )
        button(type="submit") Update profile
        if !loggedInUser.socialOnly
            hr
            a(href="change-password") change password &rarr;